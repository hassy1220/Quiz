<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-6 offset-3 text-center">
        <h2 class="quiz_show">Sign up</h2>

        <%= form_with model: @customer, url: customer_registration_path do |f| %>

          <%= render "public/shared/error_messages", model: @customer %>

          <div class="field">
            <%= f.label :name,class:"text-white" %><br>
            <%= f.text_field :name,class:"form-control" %>
          </div>

          <div class="field">
            <%= f.label :email,class:"text-white" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
          </div>

          <div class="field">
            <%= f.label :password,class:"text-white" %>
            <% if @minimum_password_length %>
            <em class="text-white">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation,class:"text-white" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up",class:"btn btn-success mt-3 mb-3" %>
          </div>
        <% end %>
        <div class="text-center">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%#= render "publics/shared/links" %>
