<div class="main">
  <div class="container">
    <h2 class="quiz_show">Sign up</h2>

    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", customer: @customer %>

      <div class="field">
        <%= f.label :name,class:"text-white" %><br>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :email,class:"text-white" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password,class:"text-white" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation,class:"text-white" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>

<%#= render "publics/shared/links" %>
