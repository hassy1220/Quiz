<div class="main">
  <div class="container">

    <div class="row mb-3">
      <div class="col text-center">
        <h1  class="quiz_show mt-3 mb-3">クイズ内容投稿</h1>

        <% flash.each do |message_type, messages| %>
            <% if messages.class == Array %>
              <% messages.each do |message| %>
                <div class="alert alert-<%= message_type %>"><%= message %></div>
              <% end %>
            <% else %>
                <div class="alert alert-success"><%= messages %></div>
            <% end %>
        <% end %>


        <%= form_with model: @quiz,url: admin_quizzes_path do |f| %>
          <label class="text-white">クイズの種類</label><br>
           <%= f.text_field :name,placeholder:"クイズの太枠",class:"form-control" %><br>
          <%= f.submit"送信",class:"btn btn-success" %><br>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col quiz_container">
        <% @quizs.each do |list| %>
          <%= link_to new_admin_quiz_question_path(list.id) do %>
            <div class="rounded quiz_title"><%= list.name %></div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>