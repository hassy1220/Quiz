<div class="container">
  <h1>クイズ内容投稿</h1>
  <%= form_with model: @form,url: admin_quiz_question_choices_path(@quiz.id,@question.id) do |f| %>
  <%# binding.pry %>
  <label>解答候補</label>
    <%= f.fields_for :choices do |i| %>
      <br><%= i.text_field :body,placeholder:"クイズの選択候補" %><br>
      <%= i.check_box :answer, {} , "true", "false" %>
      <%= i.hidden_field :question_id,value: @question.id %>
    <% end %>
    <%= f.submit"送信" %><br>
  <% end %>

  <% @questions.each do |list| %>
    <%= list.body %><%= list.answer %><br>
  <% end %>
</div>