<div class="main">
  <div class="container">
    <div class="row">
      <div class="col text-center quiz_show">
        <% flash.each do |message_type, messages| %>
          <% if messages.class == Array %>
            <% messages.each do |message| %>
              <div class="alert alert-<%= message_type %>"><%= message %></div>
            <% end %>
          <% else %>
            <div class="alert alert-<%= message_type %>"><%= messages %></div>
          <% end %>
        <% end %>


        <%= form_with model: @question,url: admin_quiz_question_path(@quiz.id,@question.id) do |f| %>
          <h1>クエスチョン一覧</h1>
          <p>クエスチョン登録</p>
          <p><%= f.text_area :body,rows:"4",class:"form-control" %></p>
          <p><%= f.file_field :image,accept:"/png" %></p>

          <%= f.submit"登録",class:"btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>