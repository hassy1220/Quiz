<!DOCTYPE html>
<html>
  <head>
    <title>Ruby</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="mt-5">
      <% if admin_signed_in? %>
        <%= link_to"管理者ログアウト",destroy_admin_session_path,method: :delete %>
        <%= link_to"クイズ太枠登録",new_admin_quiz_path %>
        <%#= link_to"クイズ内容登録",new_admin_question_path %>
        <%#= link_to"解答関連登録",new_admin_choice_path %>
      <% elsif customer_signed_in? %>
        <%= link_to"ログアウト",destroy_customer_session_path,method: :delete %>
        <%= link_to"クイズ一覧",public_quizzes_path %>
        <%= link_to"マイページ",public_customer_path(current_customer.id) %>
        <%#= link_to"クイズ太枠登録",new_admin_quiz_path %>

      <% else %>
        <%= link_to"管理者サインアップ",new_admin_registration_path %>
        <%= link_to"管理者ログイン",new_admin_session_path %>
        <%= link_to"サインアップ",new_customer_registration_path %>
        <%= link_to"ログイン",new_customer_session_path %>

      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
